<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Update">

    <EditText
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:id="@+id/rno"
        android:hint="Roll No"
        />
    <Button
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_toRightOf="@id/rno"
        android:layout_marginLeft="40dp"
        android:text="Fetch"
        android:id="@+id/fetchdata"/>
    <TextView
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:text="Name"
        android:layout_below="@id/fetchdata"
        android:layout_marginTop="40dp"
        android:textSize="20dp"
        android:layout_centerHorizontal="true"
        android:layout_toLeftOf="@id/name"/>
    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/name"
        android:layout_below="@id/fetchdata"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"/>
    <TextView
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:text="Course"
        android:textSize="20dp"
        android:layout_below="@id/name"
        android:layout_marginTop="20dp"
        android:layout_toLeftOf="@id/course"/>
    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/course"
        android:layout_below="@id/name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"/>
    <TextView
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:text="Sem"
        android:textSize="20dp"
        android:layout_below="@id/course"
        android:layout_marginTop="20dp"
        android:layout_toLeftOf="@id/sem"/>

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/sem"
        android:layout_below="@id/course"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"/>
    <TextView
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:text="Fees"
        android:textSize="20dp"
        android:layout_below="@id/sem"
        android:layout_marginTop="20dp"
        android:layout_toLeftOf="@id/fees"/>
    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/fees"
        android:layout_below="@id/sem"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"/>
    <Button
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:text="Update"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/fees"
        android:layout_marginTop="30dp"
        android:id="@+id/update"
        android:background="@drawable/buttonstyle"/>

</RelativeLayout>